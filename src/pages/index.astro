---
import Layout from "../layouts/Layout.astro";

import SectionContainer from "../components/SectionContainer.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Briefcase from "../components/Briefcase.astro";
import CodeIcon from "../icons/Code.astro";
import Profile from "../components/Profile.astro";
import AboutMe from "../components/AboutMe.astro";
import About from "../icons/About.astro";
---

<Layout
	title="Portfolio JesÃºs - Data Engineer & Python Developer"
	description="Hire me to solve complex data challenges and develop robust data solutions"
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Profile><slot /></Profile>
		</SectionContainer>
		<div class="space-y-24">
			<SectionContainer id="experience">
				<h2
					class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white"
